@using CoffeeStore.Domain.Entities
@model IEnumerable<Product>
@{
    ViewBag.Title = "Products";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Products</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-borderd">
            <tr>
                <th class="text-right">ID</th>
                <th class="text-center">CategoryID</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ProductID</td>
                    <td class="text-center">@item.CategoryID</td>
                    <td>@Html.ActionLink(item.P_Name, "Edit", new { item.ProductID })</td>
                    <td class="text-right">@item.P_Price.ToString("c")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Home"))
                        {
                            @Html.Hidden("ProductID", item.ProductID)
                            <input type="submit" class="btn btn-defalut btn-xs" value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer text-center">
        @Html.ActionLink("Add a new product", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
